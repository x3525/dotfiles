[Unit]
Description=Battery Notification

[Service]
Type=exec
ExecStart=-bash -c "POWER_SUPPLY=$(systemctl --user show -P Description battery-notification.timer) && export POWER_SUPPLY_STATUS=$(cut -c 1 /sys/class/power_supply/$POWER_SUPPLY/status) && ! systemctl --user show-environment | grep -q -- POWER_SUPPLY_STATUS=$POWER_SUPPLY_STATUS && systemctl --user import-environment POWER_SUPPLY_STATUS && POWER_SUPPLY_CAPACITY=$(cat /sys/class/power_supply/$POWER_SUPPLY/capacity) && CCC notify battery $POWER_SUPPLY_STATUS $POWER_SUPPLY_CAPACITY"

[Install]
WantedBy=default.target
